{
  "name": "my-razzle-app",
  "version": "2.0.0-alpha.8",
  "license": "MIT",
  "scripts": {
    "build": "razzle build",
    "tailwindcss": "./node_modules/.bin/tailwind build src/css/vendor/tailwind_source.css -c src/css/vendor/tailwind.setup.js -o ./src/css/vendor/tailwind_output.css",
    "start": "cross-env NODE_ENV=local razzle start",
    "start:pipeline": "NODE_ENV=production node build/server.js",
    "heroku-postbuild": "npm run build",
    "check-if-not-committed": "node scripts/check-if-not-committed.js",
    "check-travis": "NODE_ENV=test run-s -nl lint cover",
    "test": "cross-env NODE_ENV=test jest --config .jest.json --forceExit",
    "cover": "cross-env NODE_ENV=test jest --coverage --config .jest.json --forceExit",
    "lint": "eslint src/ test/",
    "lint-fix": "eslint --fix src/ test/",
    "prettier": "prettier --write **/*.js",
    "CONTAINER_SCRIPTS": "-------------------------------",
    "container:start": "docker-compose up --build --force-recreate -d && docker-compose logs -f",
    "container:exec": "docker exec -i",
    "container:web-exec": "sh -c 'docker exec -i $(docker ps --filter name=frontend -q) $1' sh",
    "container:web-sh": "docker-compose exec web sh",
    "container:reset": "docker-compose stop && docker-compose rm -f && run-s -nl container:start"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run check-if-not-committed && npm run prettier && npm run lint-fix && npm run cover"
    }
  },
  "dependencies": {
    "apollo-boost": "^0.1.22",
    "apollo-cache-inmemory": "^1.3.11",
    "apollo-client": "^2.4.7",
    "apollo-link-http": "^1.5.7",
    "axios": "^0.18.0",
    "classnames": "^2.2.6",
    "connected-react-router": "^5.0.1",
    "express": "4.16.4",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "history": "^4.7.2",
    "i18next": "^12.0.0",
    "i18next-browser-languagedetector": "^2.2.4",
    "i18next-express-middleware": "^1.5.0",
    "i18next-node-fs-backend": "^2.1.0",
    "lodash.get": "^4.4.2",
    "lodash.throttle": "^4.1.1",
    "node-fetch": "^2.3.0",
    "prop-types": "^15.6.2",
    "razzle": "2.4.0",
    "react": "16.6.1",
    "react-apollo": "^2.3.2",
    "react-dom": "16.6.1",
    "react-feather": "^1.1.4",
    "react-google-recaptcha": "^1.0.5",
    "react-lazyload": "^2.3.0",
    "react-redux": "^5.1.0",
    "react-router": "^4.2.0",
    "react-router-dom": "4.3.1",
    "react-slick": "^0.23.2",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "serialize-javascript": "^1.5.0",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "babel-plugin-root-import": "^6.1.0",
    "cross-env": "^5.2.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "glob-all": "^3.1.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.3",
    "purgecss": "^1.1.0",
    "purgecss-webpack-plugin": "^1.3.1",
    "sinon": "^7.1.0",
    "tailwindcss": "^0.7.2",
    "tailwindcss-flexbox-order": "^1.0.0",
    "tailwindcss-important": "^1.0.0"
  },
  "engines": {
    "node": "8.11.4"
  }
}
